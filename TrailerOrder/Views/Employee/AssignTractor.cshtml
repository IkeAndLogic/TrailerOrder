@model TrailerOrder.ViewModels.AssignTractorViewModel

@{
    ViewData["Title"] = "Assign Tractor";
}
<h2>@ViewData["Title"]</h2>

@if (@Model.Tractors.Count==0)
{
<p> No Tractor To be added yet!</p>


<p> <a asp-controller="Employee" asp-action="Index">Back</a> </p>

}

else
{



<form asp-controller="Employee" asp-action="AssignTractor" method="post">

    <p> Driver: @Model.FirstName @Model.LastName </p>
    <fieldset>
        <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />

        <div class="form-group">
            <label asp-for="@Model.TractorID">Tractor Number</label>
            <select asp-for="@Model.TractorID" asp-items="@Model.Tractors"></select>
            <span asp-validation-for="@Model.TractorID"></span>
        </div>



        <div class="form-group">
            <input type="submit" value="Submit" name="submitButton" />
        </div>

    </fieldset>
</form>

}