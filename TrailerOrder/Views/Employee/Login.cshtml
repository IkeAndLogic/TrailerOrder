

<h2>@ViewData["Title"]</h2>
 
<form asp-controller="Employee" asp-action="Login" method="post">
    <fieldset>
        <div class="form-group">
            <label> User Name</label>
            <input class="form-control" type="text" />
        </div>

        <div class="form-group">
            <label> Password</label>
            <input class="form-control" type="text" />
