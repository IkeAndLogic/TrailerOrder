@model TrailerOrder.ViewModels.EditCustomerViewModel

@{
    ViewData["Title"] = "Edit Customer";
}
<h2>@ViewData["Title"]</h2>


<form asp-controller="Customer" asp-action="Edit" method="post">

    <fieldset>

        <input type="hidden" name="CustomerID" value=@Model.CustomerID />

        <div class="form-group">
            <label asp-for="CustomerName">Customer Name </label>
            <input class="form-control" asp-for="CustomerName" />
            <span asp-validation-for="CustomerName"></span>

        </div>


        <div class="form-group">
            <label asp-for="StreetNumber">Street Number</label>
            <input class="form-control" asp-for="StreetNumber" />
            <span asp-validation-for="StreetNumber"></span>
        </div>


        <div class="form-group">
            <label asp-for="StreetName">Street Name</label>
            <input class="form-control" asp-for="StreetName" />
            <span asp-validation-for="StreetName"></span>
        </div>

        <div class="form-group">
            <label asp-for="City">City</label>
            <input class="form-control" asp-for="City" />
            <span asp-validation-for="City"></span>
        </div>



        <div class="form-group">
            <label asp-for="ZipCode">Zip Code</label>
            <input class="form-control" asp-for="ZipCode" />
            <span asp-validation-for="ZipCode"></span>
        </div>


        <div class="form-group">
            <label asp-for="State">State</label>
            <input class="form-control" asp-for="State" />
            <span asp-validation-for="State"></span>
        </div>


        <div class="form-group">
            <input type="submit" value="Submit" name="submitButton" />
        </div>

    </fieldset>
</form>