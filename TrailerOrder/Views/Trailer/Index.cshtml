@model List<TrailerOrder.Models.Trailer>

@{
    ViewData["Title"] = "All Trailers";
}


@if (Model.Count == 0)
{
    <p> No Trailer added yet!</p>
}

else
{


    <h2>All Trailers </h2>

    <ol>


        @foreach (var trailer in Model)
        {
            <li>
                <a asp-controller="Trailer" asp-action="TrailerInfo" asp-route-id="@trailer.TrailerID"> @trailer.TrailerNumber </a>
            </li>

        }
    </ol>



}
<p> <a asp-controller="Trailer" asp-action="Add"> Add Trailer</a> </p>
