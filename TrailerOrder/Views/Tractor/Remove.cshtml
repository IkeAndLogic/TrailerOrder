
@model TrailerOrder.ViewModels.RemoveTractorViewModel

@{
    ViewData["Title"] = "Remove Tractors";
}
<h2>@ViewData["Title"]</h2>

@if (@Model.Tractors.Count == 0)
{

    <p> nothing to remove </p>
}
else
{
    <form asp-controller="Tractor" asp-action="Remove" method="post">

        @foreach (var tractor in Model.Tractors)
        {
            <div>
                <input type="checkbox" name="tractorIds" id="@tractor.TractorID" value="@tractor.TractorID">
                <label for=" @tractor.TractorID">@tractor.TruckNumber &nbsp; @tractor.Status</label>
            </div>
        }
        <input type="submit" value=" Remove Selected Tractor" /><br>

    </form>
}