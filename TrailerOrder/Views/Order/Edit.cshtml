@model TrailerOrder.ViewModels.EditOrderViewModel

@{
    ViewData["Title"] = "Edit Order";
}
<h2>@ViewData["Title"]</h2>

<form asp-controller="Order" asp-action="Edit" method="post">

    <fieldset>

        <div class="form-group">
            <label asp-for="Order.OrderID">Order number </label>
            <input class="form-control" asp-for="Order.OrderID" />

        </div>


        <div class="form-group">
            <label asp-for="Trailer.TrailerID">Trailer</label>
            <select asp-for="Trailer.TrailerID" asp-items="Model.TrailersForLoad"></select>
        </div>


        <div class="form-group">
            <label asp-for="Customer.CustomerID">Customers Name</label>
            <select asp-for="Customer.CustomerID" asp-items="Model.CustomersOrder"></select>
        </div>


        <div class="form-group">
            <input type="submit" value="Submit" name="submitButton" />
        </div>

    </fieldset>
</form>