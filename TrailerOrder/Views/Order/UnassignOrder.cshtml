@model TrailerOrder.ViewModels.UnassignOrderViewModel

@{
    ViewData["Title"] = "Assign Order";
}
<h2>@ViewData["Title"]</h2>

<p> You are about to unassign order number: @Model.OrderNumber for Driver @Model.FirstName @Model.LastName </p>


<form asp-controller="Order" asp-action="UnassignOrder" method="post">

    <input type="hidden" name="FirstName" value=@Model.FirstName />

    <input type="hidden" name="LastName" value=@Model.LastName />

    <input type="hidden" name="OrderNumber" value=@Model.OrderNumber />

    <input type="hidden" name="EmployeeID" value=@Model.EmployeeID />
    <input type="hidden" name="OrderID" value=@Model.OrderID />




    <div class="form-group">
        <input type="submit" value="Submit" name="submitButton" />
    </div>


</form>