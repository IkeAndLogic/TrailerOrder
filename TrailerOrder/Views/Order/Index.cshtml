@model List<TrailerOrder.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<br />          
@if (Model.Count == 0)
{
    <p> No order added yet!</p>
}

else
{

    <div class="container">
        <h2>All Orders </h2>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th> Order Number</th>
                    <th> Customer Name</th>
                    <th> Trailers</th>
                    <th> Order Status</th>
                    <th> Trailer Status</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var order in Model)
                {
                <tr>
                    <td>
                        <a asp-controller="Order" asp-action="OrderInfo" asp-route-id="@order.OrderID"> @order.OrderNumber</a>
                    </td>

                    <td>
                        <a asp-controller="Order" asp-action="OrderInfo" asp-route-id="@order.OrderID">  @order.CustomerOrders.CustomerName</a>
                    </td>

                    <td>
                        <a asp-controller="Order" asp-action="OrderInfo" asp-route-id="@order.OrderID">  @order.TrailerForLoad.TrailerNumber </a>
                    </td>
                    <td>
                        <a asp-controller="Order" asp-action="OrderInfo" asp-route-id="@order.OrderID">  @order.OrderStatus </a>
                    </td>
                    <td>
                        <a asp-controller="Order" asp-action="OrderInfo" asp-route-id="@order.OrderID">  @order.TrailerForLoad.TrailerStatus </a>
                    </td>


                    <td>
                        <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.OrderID"> <input type="submit" value="Edit"/></a> 
                    </td>

                </tr>
                }
            <tbody>
        </table>
    </div>


}
<p> <a asp-controller="Order" asp-action="Add"> Add Order</a> </p>
